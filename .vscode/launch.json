{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Athena CLI Tool",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/examples/Resolver.Athena.CliClient/bin/Debug/net9.0/Resolver.Athena.CliClient.dll",
            "args": ["${input:simple-client-commands}"],
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole",
        },
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "simple-client-commands",
            "description": "which Athena CLI command do you wish to run?",
            "options": [
                "token-test",
                "list-deployments"
            ]
        }
    ]
}
